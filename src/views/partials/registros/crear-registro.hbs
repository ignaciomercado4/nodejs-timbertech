<article
  class="d-flex justify-content-center align-items-center vh-100 bg-light"
>
  <div class="text-center">
    <h1 class="display-4 mb-4">Crear Registro</h1>
    <form method="POST" action="" id="form-crear-registro" class="mb-4">
      <div class="mb-3">
        <label for="name" class="form-label">Nombre del operario:</label>
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="Ej: Pablo Pérez"
        />
      </div>

      <div class="mb-3">
        <label for="package" class="form-label">Especie:</label>
        <input
          type="text"
          class="form-control"
          name="packet"
          placeholder="Ej: 09-06-2024-T"
        />
      </div>

      <div class="mb-3">
        <label for="thickness" class="form-label">Espesor de las tablas
          (pulgadas):</label>
        <select class="form-select" name="thickness">
          <option value="0.5">0.5"</option>
          <option value="1.0">1"</option>
          <option value="1.5">1.5"</option>
          <option value="2.0">2"</option>
          <option value="2.5">2.5"</option>
          <option value="3.0">3"</option>
          <option value="3.5">3.5"</option>
          <option value="4.0">4.5"</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="height" class="form-label">Largo de las tablas (metros):</label>
        <input
          type="number"
          class="form-control"
          name="height"
          placeholder="3.50"
          step="0.01"
        />
      </div>

      <div class="mb-3">
        <label for="width" class="form-label">Ancho de las tablas (metros):</label>
        <input
          type="number"
          class="form-control"
          name="width"
          placeholder="1.10"
          step="0.01"
        />
      </div>

      <div class="mb-3">
        <label for="width" class="form-label">Especie:</label>
        <input
          type="text"
          class="form-control"
          name="width"
          placeholder="Ej: Guatambú"
        />
      </div>

      <button type="submit" class="btn btn-outline-dark btn-lg">Crear registro</button>
    </form>
  </div>
</article>