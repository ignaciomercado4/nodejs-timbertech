<article
  class="d-flex justify-content-center align-items-center vh-100 bg-light"
>
  <div class="text-center">
    <h1 class="display-4 mb-4">Crear Registro</h1>
    {{#if paquetes}}
      <form
        method="POST"
        action="/crear-registro"
        id="form-crear-registro"
        class="mb-4"
      >
        <div class="mb-3">
          <label for="id_paquete" class="form-label">Paquete:</label>
          <select name="id_paquete" id="id-paquete" required>
            <option value="">Seleccione un paquete</option>
            {{#each paquetes}}
              <option
                value={{dataValues.id}}
              >{{dataValues.date}}-{{dataValues.shift}}-{{dataValues.id}}</option>
            {{/each}}
          </select>
        </div>

        <div class="mb-3">
          <label for="espesor" class="form-label">Espesor de las tablas
            (pulgadas):</label>
          <select class="form-select" name="espesor" id="espesor" required>
            <option value="0.5">0.5"</option>
            <option value="1.0">1"</option>
            <option value="1.5">1.5"</option>
            <option value="2.0">2"</option>
            <option value="2.5">2.5"</option>
            <option value="3.0">3"</option>
            <option value="3.5">3.5"</option>
            <option value="4.0">4.5"</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="alto" class="form-label">Largo de las tablas (metros):</label>
          <input
            type="number"
            class="form-control"
            name="alto"
            placeholder="3.50"
            step="0.01"
            id="alto"
            required
          />
        </div>

        <div class="mb-3">
          <label for="ancho" class="form-label">Ancho de las tablas (metros):</label>
          <input
            type="number"
            class="form-control"
            name="ancho"
            placeholder="1.10"
            step="0.01"
            id="ancho"
            required
          />
        </div>

        <div class="mb-3">
          <label for="especie" class="form-label">Especie:</label>
          <input
            type="text"
            class="form-control"
            name="especie"
            placeholder="Ej: GuatambÃº"
            id="especie"
            required
          />
        </div>

        <button type="submit" class="btn btn-outline-dark btn-lg">Crear registro</button>
      </form>
    {{/if}}

  </div>
</article>