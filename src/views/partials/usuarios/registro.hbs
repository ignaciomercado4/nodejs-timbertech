  $passwordInput = document.querySelector('#password'); const
  $confirmPasswordInput = document.querySelector('#confirm-password'); const
  $registroForm = document.querySelector('#registro-form'); if
  ($passwordInput.value != $confirmPasswordInput.value) { alert('Las contraseñas
