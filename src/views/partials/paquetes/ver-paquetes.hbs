<div class="container mt-5">
  <h1 class="mb-4">Lista de Paquetes</h1>
  <form action="/filtrar-paquetes">
    <label for="filtrar-fecha-creacion">
      Filtrar por fecha de creación:
    </label>
    <select name="filtrar-fecha-creacion" id="filtrar-fecha-creacion">
      <option value="mas-recientes-primero">
        Mas recientes primero
      </option>
      <option value="mas-antiguos-primero">
        Mas antiguos primero
      </option>
    </select>

    <label for="filtrar-turno">
      Filtrar por turno:
    </label>
    <select name="filtrar-turno" id="filtrar-turno">
      <option value="M">
        Mañana
      </option>
      <option value="T">
        Tarde
      </option>
      <option value="N">
        Noche
      </option>

    </select>
  </form>

  {{#if paquetes}}
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th class="col-1">ID</th>
          <th class="col-2">Fecha</th>
          <th class="col-2">Turno</th>
          <th class="col-2">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each paquetes}}
          <tr>
            <td class="col-1">{{dataValues.id}}</td>
            <td class="col-2">{{dataValues.date}}</td>
            <td class="col-2">
              {{#if (eq dataValues.shift "M")}}
                Mañana
              {{else if (eq dataValues.shift "T")}}
                Tarde
              {{else if (eq dataValues.shift "N")}}
                Noche
              {{else}}
                {{dataValues.shift}}
              {{/if}}
            </td>
            <td class="col-2">
              <div class="btn-group" role="group">
                <a href="" class="btn btn-sm btn-info">Ver</a>
                <a href="" class="btn btn-sm btn-warning">Editar</a>
                <button class="btn btn-sm btn-danger">Eliminar</button>
              </div>

            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="alert alert-info">No hay paquetes para mostrar.</p>
    <a href="/crear-paquete">Crear un paquete</a>
  {{/if}}
</div>