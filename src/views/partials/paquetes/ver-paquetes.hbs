<div class="container mt-5">
  <h1 class="mb-4">Lista de Paquetes</h1>

  <pre>{{json paquetes}}</pre>
  {{#if paquetes}}
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Fecha</th>
          <th>Turno</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each paquetes}}
          <tr>
            <td>{{this.id}}</td>
            <td>Imagina q es una fecha</td>
            <td>Imagina q es un turno</td>
            <td>
              <a href="" class="btn btn-sm btn-info">Ver</a>
              <a href="" class="btn btn-sm btn-warning">Editar</a>
              <button class="btn btn-sm btn-danger" onclick="">Eliminar</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="alert alert-info">No hay paquetes para mostrar.</p>
    <a href="/crear-paquete">Crear un paquete</a>
  {{/if}}
</div>

<script>
  var paquetes =
  {{{json paquetes}}}; console.log('Paquetes en el cliente:', paquetes);
</script>